import QtQuick
import QtQuick.Window
import QtQuick.Controls

Window {
    visible: true
    width: 1024
    height: 600
    title: "Robot Matrix"
    property string currentView: "none"

    Column {
        x: parent.width / 4
        y: 0
        spacing: 20
        // View Switcher
        Loader {
            id: viewLoader
            sourceComponent: currentView === "pointCloud" ? pointCloudView :
                             currentView === "camera" ? cameraView :
                             currentView === "map" ? mapView : null
        }

        // Buttons
        Row {
            spacing: 10
            Button { text: "Point Cloud"; onClicked: currentView = "pointCloud" }
            Button { text: "Camera"; onClicked: currentView = "camera" }
            Button { text: "Map"; onClicked: currentView = "map" }
        }

        // Input Fields
        Row {
            spacing: 10
            TextField { id: xInput; placeholderText: "Enter X" }
            TextField { id: yInput; placeholderText: "Enter Y" }
        }
    }

    // Dummy Components (replace with your actual visualizations)
    Component {
        id: pointCloudView
        Rectangle {
             width: parent.width; height: parent.height-20; color: "lightblue"
            Text { anchors.centerIn: parent; text: "Point Cloud View" }
        }
    }

    Component {
        id: cameraView
        Rectangle {
            width: parent.width; height: parent.height-20; color: "lightgreen"
            Text { anchors.centerIn: parent; text: "Camera View" }
        }
    }

    Component {
        id: mapView
        Rectangle {
            width: parent.width; height: parent.height-20;color: "lightgray"
            Text { anchors.centerIn: parent; text: "Map View" }
        }
    }
}